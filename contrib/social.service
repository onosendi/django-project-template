[Unit]
Description=uWSGI instance to serve {{ project_name }}
After=network.target

[Service]
User={{ project_name }}
Group=www-data
WorkingDirectory=/var/www/vhosts/{{ project_name }}/htdocs/contrib
Environment="PATH=/var/www/vhosts/{{ project_name }}/htdocs/venv/bin"
ExecStart=/var/www/vhosts/{{ project_name }}/htdocs/venv/bin/uwsgi --ini uwsgi.ini

[Install]
WantedBy=multi-user.target
